// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  username        String?   @unique
  email           String?   @unique
  password        String?
  resetToken      String?   @unique
  resetTokenExpiry DateTime?
  name            String    @default("User")
  avatar          String?   // Base64 string or URL
  level           Int       @default(1)
  xp              Int       @default(0)
  totalXp         Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  habits    Habit[]
  moods     MoodLog[]
  tasks     Task[]
  routines  Routine[]
  badges    UserBadge[]
}

model Habit {
  id        String     @id @default(cuid())
  title     String
  emoji     String     @default("üìù")
  color     String     @default("#3b82f6")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  description String?
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  logs        HabitLog[]
  streak      Int        @default(0)
}

model HabitLog {
  id        String   @id @default(cuid())
  date      String   // ISO date string (YYYY-MM-DD)
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([date, habitId])
}

model MoodLog {
  id        String   @id @default(cuid())
  date      String   // One mood per day per user
  moodType  String   // great, good, okay, bad, awful
  message   String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([date, userId])
}

model Task {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  date      String   // YYYY-MM-DD
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

model Routine {
  id        String   @id @default(cuid())
  title     String
  time      String   // e.g. "5:00 - 5:15"
  completed Boolean  @default(false) // Static baseline completion or usage?
  order     Int      @default(0)
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model UserBadge {
  id        String   @id @default(cuid())
  badgeId   String   // The code from badges.ts (e.g., 'streak_7')
  earnedAt  DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, badgeId])
}
